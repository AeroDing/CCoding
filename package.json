{
  "publisher": "AeroDing",
  "name": "CCoding",
  "displayName": "CCoding",
  "version": "0.2.11",
  "description": "A comprehensive coding assistant with function lists, bookmarks, quick navigation, todo lists, timeline, and keyword search for development",
  "author": "Pxin Ding",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AeroDing/CCoding.git"
  },
  "keywords": [
    "coding",
    "CCoding",
    "vue",
    "react",
    "function",
    "bookmark"
  ],
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "CCoding.showFunctionList",
        "title": "Show Function List",
        "category": "CCoding"
      },
      {
        "command": "CCoding.addBookmark",
        "title": "Add Bookmark",
        "category": "CCoding"
      },
      {
        "command": "CCoding.showBookmarks",
        "title": "Show Bookmarks",
        "category": "CCoding"
      },
      {
        "command": "CCoding.quickJump",
        "title": "Quick Jump",
        "category": "CCoding"
      },
      {
        "command": "CCoding.showTodos",
        "title": "Show Todo List",
        "category": "CCoding"
      },
      {
        "command": "CCoding.showTimeline",
        "title": "Show Timeline",
        "category": "CCoding"
      },
      {
        "command": "CCoding.addBookmarkFromContext",
        "title": "Add to Bookmarks",
        "category": "CCoding"
      },
      {
        "command": "CCoding.editBookmark",
        "title": "Edit Bookmark",
        "category": "CCoding"
      },
      {
        "command": "CCoding.removeBookmark",
        "title": "Remove Bookmark",
        "category": "CCoding"
      },
      {
        "command": "CCoding.addBookmarkFromEditor",
        "title": "添加书签",
        "category": "CCoding"
      },
      {
        "command": "CCoding.repairData",
        "title": "修复数据",
        "category": "CCoding"
      },
      {
        "command": "CCoding.refreshCurrentFileNav",
        "title": "刷新当前文件导航",
        "category": "CCoding",
        "icon": "$(refresh)"
      },
      {
        "command": "CCoding.refreshGlobalBookmarks",
        "title": "刷新全局书签",
        "category": "CCoding",
        "icon": "$(refresh)"
      },
      {
        "command": "CCoding.refreshGlobalTodos",
        "title": "刷新全局待办",
        "category": "CCoding",
        "icon": "$(refresh)"
      },
      {
        "command": "CCoding.unifiedSearch",
        "title": "统一搜索",
        "category": "CCoding",
        "icon": "$(search)"
      },
      {
        "command": "CCoding.selectSearchType",
        "title": "选择搜索类型",
        "category": "CCoding",
        "icon": "$(filter)"
      },
      {
        "command": "CCoding.searchGlobalTodos",
        "title": "搜索全局待办事项",
        "category": "CCoding",
        "icon": "$(search)"
      },
      {
        "command": "CCoding.clearGlobalTodosSearch",
        "title": "清除搜索",
        "category": "CCoding",
        "icon": "$(clear-all)"
      },
      {
        "command": "CCoding.changeGlobalTodosGroupBy",
        "title": "切换分组方式",
        "category": "CCoding",
        "icon": "$(group-by-ref-type)"
      },
      {
        "command": "CCoding.searchGlobalBookmarks",
        "title": "搜索全局书签",
        "category": "CCoding",
        "icon": "$(search)"
      },
      {
        "command": "CCoding.clearGlobalBookmarksSearch",
        "title": "清除书签搜索",
        "category": "CCoding",
        "icon": "$(clear-all)"
      },
      {
        "command": "CCoding.changeGlobalBookmarksGroupBy",
        "title": "切换书签分组方式",
        "category": "CCoding",
        "icon": "$(group-by-ref-type)"
      },
      {
        "command": "CCoding.refreshQuickAccess",
        "title": "刷新快速访问",
        "category": "CCoding",
        "icon": "$(refresh)"
      }
    ],
    "configuration": {
      "title": "CCoding 搜索配置",
      "properties": {
        "CCoding.search.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/.DS_Store",
            "**/thumbs.db",
            "**/vendor/**",
            "**/cache/**",
            "**/logs/**"
          ],
          "description": "搜索时排除的目录和文件模式（glob patterns）",
          "scope": "window"
        },
        "CCoding.search.maxResults": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 1000,
          "description": "搜索结果的最大数量",
          "scope": "window"
        },
        "CCoding.search.caseSensitive": {
          "type": "boolean",
          "default": false,
          "description": "搜索时是否区分大小写",
          "scope": "window"
        },
        "CCoding.todos.enabledTypes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["TODO", "FIXME", "NOTE", "BUG", "HACK"]
          },
          "default": ["TODO", "FIXME", "NOTE", "BUG", "HACK"],
          "description": "启用的 TODO 类型",
          "scope": "window"
        }
      }
    },
    "keybindings": [
      {
        "command": "CCoding.showFunctionList",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f"
      },
      {
        "command": "CCoding.addBookmark",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b"
      },
      {
        "command": "CCoding.quickJump",
        "key": "ctrl+shift+j",
        "mac": "cmd+shift+j"
      },
      {
        "command": "CCoding.unifiedSearch",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s"
      }
    ],
    "views": {
      "CCoding": [
        {
          "id": "CCoding.currentFileNav",
          "name": "🏠 当前文件导航",
          "type": "webview",
          "when": "true",
          "visibility": "visible"
        },
        {
          "id": "CCoding.globalBookmarks",
          "name": "📚 全局书签管理",
          "when": "true",
          "visibility": "visible"
        },
        {
          "id": "CCoding.globalTodos",
          "name": "📋 全局待办事项",
          "when": "true",
          "visibility": "visible"
        },
        {
          "id": "CCoding.quickAccess",
          "name": "⚡ 快速访问面板",
          "when": "true",
          "visibility": "visible"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "CCoding",
          "title": "CCoding",
          "icon": "src/images/logo.svg"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "CCoding.addBookmarkFromContext",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "submenu": "CCoding.editorSubmenu",
          "when": "editorTextFocus",
          "group": "navigation@1"
        }
      ],
      "CCoding.editorSubmenu": [
        {
          "command": "CCoding.addBookmarkFromEditor",
          "when": "editorTextFocus"
        }
      ],
      "view/item/context": [
        {
          "command": "CCoding.editBookmark",
          "when": "view == CCoding.unifiedView && (viewItem == bookmark || viewItem == bookmark-pinned)",
          "group": "inline@1"
        },
        {
          "command": "CCoding.removeBookmark",
          "when": "view == CCoding.unifiedView && (viewItem == bookmark || viewItem == bookmark-pinned)",
          "group": "inline@2"
        }
      ],
      "view/title": [
        {
          "command": "CCoding.refreshCurrentFileNav",
          "when": "view == CCoding.currentFileNav",
          "group": "navigation"
        },
        {
          "command": "CCoding.refreshGlobalBookmarks",
          "when": "view == CCoding.globalBookmarks",
          "group": "navigation"
        },
        {
          "command": "CCoding.searchGlobalBookmarks",
          "when": "view == CCoding.globalBookmarks",
          "group": "navigation"
        },
        {
          "command": "CCoding.changeGlobalBookmarksGroupBy",
          "when": "view == CCoding.globalBookmarks",
          "group": "navigation"
        },
        {
          "command": "CCoding.refreshGlobalTodos",
          "when": "view == CCoding.globalTodos",
          "group": "navigation"
        },
        {
          "command": "CCoding.searchGlobalTodos",
          "when": "view == CCoding.globalTodos",
          "group": "navigation"
        },
        {
          "command": "CCoding.changeGlobalTodosGroupBy",
          "when": "view == CCoding.globalTodos",
          "group": "navigation"
        },
        {
          "command": "CCoding.clearGlobalTodosSearch",
          "when": "view == CCoding.globalTodos",
          "group": "navigation"
        },
        {
          "command": "CCoding.refreshQuickAccess",
          "when": "view == CCoding.quickAccess",
          "group": "navigation"
        }
      ]
    },
    "submenus": [
      {
        "id": "CCoding.editorSubmenu",
        "label": "CCoding"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run lint && npm run compile",
    "compile": "node scripts/build.js",
    "watch": "tsc -watch -p ./",
    "package": "npx vsce package",
    "build": "npm run lint && npm run compile && npm run package",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "bumpp": "bumpp",
    "publish": "npx vsce publish",
    "postbumpp": "echo '🎉 bumpp complete. Pushing tag to trigger release workflow...'"
  },
  "dependencies": {
    "bumpp": "^10.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.15.0",
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vscode/vsce": "^2.29.1",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "eslint-plugin-format": "^1.0.1",
    "glob": "^11.0.3",
    "typescript": "^4.9.4"
  }
}
